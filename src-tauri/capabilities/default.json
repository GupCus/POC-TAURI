{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:default",
    {
      "identifier": "fs:allow-create",
      "allow": [{ "path": "$APPDATA/*"}]
    },
    "fs:allow-write",
    "fs:scope-appdata-index",
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [{ "path": "$APPDATA/*"}]
    },
    {
      "identifier": "fs:allow-remove",
      "allow": [{ "path": "$APPDATA/*" }]
    }
  ]
}